/* pages/scan-demo/scan-demo.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #07c160;
}

/* 参数部分 */
.params-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.params-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.param-item {
  display: flex;
  padding: 15rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #07c160;
}

.param-key {
  font-weight: bold;
  color: #333;
  min-width: 120rpx;
  margin-right: 20rpx;
}

.param-value {
  color: #666;
  word-break: break-all;
}

.no-params {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
}

/* 场景部分 */
.scene-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.scene-info {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.scene-info text {
  padding: 15rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  color: #333;
}

/* 业务部分 */
.business-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.business-card {
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  overflow: hidden;
}

.card-title {
  background-color: #07c160;
  color: white;
  padding: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.card-content {
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.card-content text {
  color: #333;
  font-size: 28rpx;
}

.action-btn {
  margin-top: 20rpx;
  background-color: #07c160;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 20rpx;
}

.action-btn:hover {
  background-color: #06a84e;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
}

.btn.primary {
  background-color: #07c160;
  color: white;
}

.btn.primary:hover {
  background-color: #06a84e;
}

.btn.secondary {
  background-color: #f0f0f0;
  color: #333;
}

.btn.secondary:hover {
  background-color: #e0e0e0;
}

/* pages/timeline-share/timeline-share.wxss */

.timeline-share-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 50vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #ffffff;
  font-size: 28rpx;
}

/* 分享内容 */
.share-content {
  width: 100%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
  animation: slideUp 0.6s ease-out;
}

@keyframes slideUp {
  0% {
    opacity: 0;
    transform: translateY(40rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 媒体容器 */
.media-container {
  width: 100%;
  height: 400rpx;
  position: relative;
  overflow: hidden;
  background: #f5f5f5;
}

/* 视频样式 */
.share-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 图片样式 */
.share-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 文字内容区域 */
.text-content {
  padding: 40rpx;
}

/* 标题区域 */
.title-section {
  margin-bottom: 24rpx;
}

.share-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1.4;
  display: block;
}

/* 描述区域 */
.desc-section {
  margin-bottom: 32rpx;
}

.share-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  display: block;
}

/* 标签区域 */
.tags-section {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.tag {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  white-space: nowrap;
}

/* 行动按钮区域 */
.action-section {
  padding: 0 40rpx 40rpx;
}

.enter-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.4);
  transition: all 0.3s ease;
  margin-bottom: 20rpx;
}

.enter-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.btn-text {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}

/* 提示文字 */
.tips {
  text-align: center;
}

.tips-text {
  color: #999999;
  font-size: 24rpx;
  line-height: 1.4;
}
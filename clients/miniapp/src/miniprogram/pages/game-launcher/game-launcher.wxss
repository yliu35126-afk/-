page {
  height: 100vh;
  background-color: #f5f5f5;
  overflow: hidden;
}

.payment-success-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  overflow: hidden;
}

/* 绿色头部区域 - 固定高度 */
.success-header {
  background: #00d26a;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  flex-shrink: 0;
}

/* 白色圆圈 */
.success-circle {
  width: 120rpx;
  height: 120rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 对勾图标 */
.checkmark {
  font-size: 60rpx;
  color: #00d26a;
  font-weight: bold;
  line-height: 1;
}

/* 已支付文本 */
.success-text {
  color: white;
  font-size: 36rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
}

/* 白色悬浮卡片 */
.floating-card {
  background: white;
  margin: -50rpx 40rpx 0;
  border-radius: 24rpx;
  padding: 80rpx 40rpx;
  z-index: 10;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
}

/* 金额显示区域 */
.amount-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.currency {
  font-size: 36rpx;
  color: #00d26a;
  font-weight: 300;
  margin-right: 6rpx;
}

.amount {
  font-size: 72rpx;
  color: #00d26a;
  font-weight: bold; /* 改为粗体 */
  line-height: 1;
}

/* 订单详情 */
.order-details {
  margin-bottom: 0;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
}

.detail-label {
  font-size: 26rpx;
  color: #000000;
}

.detail-value {
  font-size: 26rpx;
  color: #000; /* 改为黑色 */
  font-weight: 400;
  max-width: 60%; /* 限制宽度 */
  text-align: right;
  word-break: break-all; /* 允许换行 */
}

/* 主要内容区域 - 减少flex占用，固定高度 */
.content-area {
  padding: 20rpx 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  flex-shrink: 0; /* 不允许压缩 */
}

/* 设备码展示（替代重试加入房间按钮） */
.device-code-row {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 20rpx;
}
.device-code-text {
  font-size: 24rpx;
  color: rgba(0,0,0,0.6);
}

/* 虚线分隔 */
.dotted-divider {
  height: 2rpx;
  background-image: repeating-linear-gradient(to right, #ddd 0, #ddd 8rpx, transparent 8rpx, transparent 16rpx);
  margin: 15rpx 0 20rpx;
}

/* 分享按钮区域 */

page {
  height: 100vh;
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 50%, #ff4757 100%);
}

.lottery-controller-container {
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 动态背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  pointer-events: none;
}

/* 浮动金币动画 */
.floating-coin {
  position: absolute;
  font-size: 40rpx;
  animation: floatingCoin 3s ease-in-out infinite;
}

.coin-1 { top: 10%; left: 10%; animation-delay: 0s; }
.coin-2 { top: 20%; right: 15%; animation-delay: 0.5s; }
.coin-3 { top: 60%; left: 5%; animation-delay: 1s; }
.coin-4 { top: 80%; right: 10%; animation-delay: 1.5s; }
.coin-5 { top: 40%; left: 85%; animation-delay: 2s; }
.coin-6 { top: 70%; right: 80%; animation-delay: 2.5s; }

@keyframes floatingCoin {
  0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.6; }
  50% { transform: translateY(-20px) rotate(180deg); opacity: 1; }
}

/* 动态光束效果 */
.light-beam {
  position: absolute;
  width: 4rpx;
  height: 100%;
  background: linear-gradient(to bottom, 
    transparent 0%, 
    rgba(255, 255, 255, 0.3) 50%, 
    transparent 100%);
  animation: lightMove 4s linear infinite;
}

.beam-1 { left: 20%; animation-delay: 0s; }
.beam-2 { left: 50%; animation-delay: 1s; }
.beam-3 { right: 30%; animation-delay: 2s; }

@keyframes lightMove {
  0% { opacity: 0; transform: scaleY(0); }
  50% { opacity: 1; transform: scaleY(1); }
  100% { opacity: 0; transform: scaleY(0); }
}

/* 主要内容区域 */
.main-content {
  position: relative;
  z-index: 2;
  padding: 0 30rpx 30rpx 30rpx;
}

/* 标题区域 */
.header {
  text-align: center;
  padding: 40rpx 0 60rpx 0;
  position: relative;
}

.title-wrapper {
  position: relative;
  display: inline-block;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  display: block;
  margin-bottom: 20rpx;
}

.title-sparkle {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 30rpx;
  height: 30rpx;
  background: radial-gradient(circle, #fff 0%, transparent 70%);
  border-radius: 50%;
  animation: sparkle 2s ease-in-out infinite;
}

@keyframes sparkle {
  0%, 100% { opacity: 0; transform: scale(0.5); }
  50% { opacity: 1; transform: scale(1); }
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);

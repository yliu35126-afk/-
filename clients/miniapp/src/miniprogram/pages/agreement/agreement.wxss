/* agreement.wxss */

/* 页面样式 */
page {
  /* 确保页面从安全区域开始 */
  padding-top: env(safe-area-inset-top);
  box-sizing: border-box;
  background-color: #f8f9fa;
}

/* 页面容器 */
.page-container {
  width: 100%;
  min-height: calc(100vh - env(safe-area-inset-top));
  background-color: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 内容容器 */
.content-container {
  flex: 1;
  background-color: #f8f9fa;
}

.content-wrapper {
  min-height: 100%;
  background-color: #ffffff;
  margin: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

/* 标题区域 */
.header-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  text-align: center;
  color: #ffffff;
}

.company-name {
  display: block;
  font-size: 32rpx;
  font-weight: 400;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

/* 协议内容区域 */
.agreement-sections {
  padding: 40rpx;
}

/* 章节样式 */
.section {
  margin-bottom: 48rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-header {
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2px solid #667eea;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  line-height: 1.4;
}

.section-body {
  padding-left: 8rpx;
}

/* 子章节样式 */
.subsection {
  margin-bottom: 32rpx;
}

.subsection:last-child {
  margin-bottom: 0;
}

.subsection-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #495057;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

/* 内容文本样式 */
.content-text {
  display: block;
  font-size: 28rpx;
  line-height: 1.8;
  color: #666666;
  text-align: justify;
  word-wrap: break-word;
  word-break: break-all;
  margin-bottom: 0;
}

/* 列表项样式 */
.list-item {
  display: block;
  font-size: 26rpx;
  line-height: 1.8;
  color: #666666;
  margin-bottom: 8rpx;
  padding-left: 20rpx;
  text-align: justify;
  word-wrap: break-word;
  word-break: break-all;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .content-wrapper {
    margin: 16rpx;
    border-radius: 12rpx;
  }
  
  .header-section {
    padding: 48rpx 32rpx;
  }
  
  .agreement-sections {
    padding: 32rpx 24rpx;
  }
  
  .section-title {
    font-size: 32rpx;
  }
  
  .subsection-title {
    font-size: 28rpx;
  }
  
  .content-text {
    font-size: 26rpx;
  }
}

/* 滚动条样式优化 */
::-webkit-scrollbar {
  width: 0;
  background: transparent;
}

/* 页面进入动画 */
.page-container {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
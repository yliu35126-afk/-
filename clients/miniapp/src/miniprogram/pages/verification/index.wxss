.verification-container {
  padding: 16px;
}
.header {
  margin-bottom: 16px;
}
.title {
  font-size: 18px;
  font-weight: 600;
}
.subtitle {
  font-size: 12px;
  color: #666;
}
.section {
  margin-top: 16px;
}
.section-title {
  font-size: 14px;
  color: #333;
  margin-bottom: 8px;
}
.scan-card, .manual-card {
  background: #fff;
  border-radius: 8px;
  padding: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}
.scan-icon {
  font-size: 20px;
}
.scan-desc {
  display: block;
  color: #666;
  margin: 8px 0;
}
.scan-btn, .verify-btn {
  margin-top: 8px;
}
.code-input {
  border: 1px solid #eee;
  border-radius: 6px;
  padding: 8px;
}
.result-tip {
  margin-top: 16px;
  font-size: 14px;
  color: #2196F3;
}
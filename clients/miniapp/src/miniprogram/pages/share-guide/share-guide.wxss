/* 全屏分享引导样式 */
.fullscreen-share-guide {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  z-index: 11000;
  opacity: 1;
  visibility: visible;
  transition: all 0.3s ease;
  overflow-y: auto;
}

.fullscreen-guide-content {
  min-height: 100vh;
  padding: 40rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.safe-area-top {
  width: 100%;
  height: 100rpx;
  flex-shrink: 0;
}

.guide-bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  pointer-events: none;
}

.guide-close-btn {
  position: absolute;
  top: 180rpx;
  right: 40rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 40rpx;
  color: white;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  z-index: 10;
}

.guide-main-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  margin-top: 120rpx;
  margin-bottom: 20rpx;
}

.guide-sub-title {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  margin-bottom: 60rpx;
}

.guide-prize-display {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.guide-prize-image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 30rpx;
  border-radius: 15rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.1);
}

.guide-prize-image image {
  width: 100%;
  height: 100%;
}

.guide-prize-name {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.guide-share-display {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.guide-share-image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 30rpx;
  border-radius: 15rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.1);
}

.guide-share-image image {
  width: 100%;
  height: 100%;
}

.guide-share-text {
  font-size: 28rpx;
  color: white;
  line-height: 1.5;
  word-break: break-all;
}

.guide-steps {
  width: 100%;
  margin-bottom: 40rpx;
}

.guide-step {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  padding: 30rpx 25rpx;
  backdrop-filter: blur(5rpx);
  position: relative;
}

.step-arrow {
  font-size: 40rpx;
  color: white;
  margin-left: 20rpx;
  font-weight: bold;
}

.top-right-indicator {
  position: absolute;
  top: 150rpx;
  right: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: bounce 2s infinite;
}

.indicator-arrow {
  font-size: 60rpx;
  color: white;
  font-weight: bold;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
}

.indicator-text {
  font-size: 24rpx;
  color: white;
  margin-top: 5rpx;
  text-align: center;
  font-weight: bold;
  text-shadow: 0 0 5rpx rgba(0, 0, 0, 0.3);
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: white;
  color: #ff6b35;
  border-radius: 50%;
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 25rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.step-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

/* 分享媒体预览样式 */
.guide-media-preview {
  width: 100%;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(5rpx);
}

.media-label {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.media-container {
  position: relative;
  width: 100%;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
}

.media-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10;
  border-radius: 12rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  color: white;
  font-size: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.share-video {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  background: #000;
}

.share-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
}

.share-image-media {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
}

.media-type-tag {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  backdrop-filter: blur(5rpx);
}

.media-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  line-height: 1.4;
}

.guide-recommend-text {
  width: 100%;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 50rpx;
  backdrop-filter: blur(5rpx);
}

.recommend-label {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 15rpx;
}

.recommend-content {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
  background: rgba(255, 255, 255, 0.1);
  padding: 20rpx;
  border-radius: 10rpx;
  border-left: 4rpx solid white;
}

.guide-actions {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: auto;
  padding-bottom: 40rpx;
}

.guide-share-btn, .guide-copy-btn, .guide-done-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.guide-share-btn {
  background: white;
  color: #ff6b35;
}

.guide-copy-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.guide-done-btn {
  background: rgba(255, 255, 255, 0.1);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}
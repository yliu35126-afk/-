/**my.wxss**/
page {
  height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  /* 确保页面从安全区域开始 */
  padding-top: env(safe-area-inset-top);
  box-sizing: border-box;
}

.my-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.main-content {
  flex: 1;
  padding: 40rpx 32rpx 40rpx 32rpx;
  display: flex;
  flex-direction: column;
}

/* 登录卡片 */
.login-card {
  background: #4a4a4a;
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  gap: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 60rpx;
}

.login-icon {
  width: 120rpx;
  height: 120rpx;
  background: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.icon-text {
  color: white;
  font-size: 48rpx;
  font-weight: bold;
}

.login-text {
  color: white;
  font-size: 36rpx;
  font-weight: 500;
}

/* 菜单列表 */
.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 16rpx;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 40rpx;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.order-icon {
  background: #2196F3;
  position: relative;
}

.order-icon::before {
  content: '';
  width: 24rpx;
  height: 24rpx;
  background: white;
  border-radius: 4rpx;
  position: absolute;
}

.order-icon::after {
  content: '';
  width: 16rpx;
  height: 2rpx;
  background: white;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 -6rpx 0 white, 0 6rpx 0 white;
}

.agreement-icon {
  background: #FF9800;
  position: relative;
}

.agreement-icon::before {
  content: '';
  width: 20rpx;
  height: 28rpx;
  background: white;
  border-radius: 2rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.agreement-icon::after {
  content: '';
  width: 12rpx;
  height: 2rpx;
  background: #FF9800;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 -4rpx 0 #FF9800, 0 4rpx 0 #FF9800;
}

/* 环境设置图标 */
.env-icon {
  background: #9C27B0;
  position: relative;
}
.env-icon::before {
  content: '⚙';
  color: white;
  font-size: 28rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.menu-text {
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  position: relative;
}

.arrow-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 12rpx;
  height: 12rpx;
  border-top: 3rpx solid #999;
  border-right: 3rpx solid #999;
  transform: translate(-50%, -50%) rotate(45deg);
}

/* 用户信息样式 */
.user-info {
  display: flex;
  align-items: center;
  gap: 32rpx;
  width: 100%;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f0f0f0;
  flex-shrink: 0;
}

.user-avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-text {
  color: white;
  font-size: 48rpx;
  font-weight: bold;
}

.user-name {
  color: white;
  font-size: 36rpx;
  font-weight: 500;
  flex: 1;
}

.edit-hint {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}

.login-prompt {
  display: flex;
  align-items: center;
  gap: 48rpx;
  width: 100%;
}

/* 点击效果 */
.login-card:active {
  transform: scale(0.98);
  transition: transform 0.1s ease;
}

.menu-item:active {
  transform: scale(0.98);
  transition: transform 0.1s ease;
}

/* 提现图标 */
.withdraw-icon {
  background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
  position: relative;
}

.withdraw-icon::before {
  content: '';
  width: 24rpx;
  height: 16rpx;
  background: white;
  border-radius: 3rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.withdraw-icon::after {
  content: '¥';
  color: #ff6b35;
  font-size: 12rpx;
  font-weight: bold;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  line-height: 1;
}

/* 提现记录弹窗 */
.withdraw-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.withdraw-modal.show {
  opacity: 1;
  visibility: visible;
}

.withdraw-modal-content {
  width: 90%;
  max-width: 700rpx;
  max-height: 80%;
  background: white;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.withdraw-modal.show .withdraw-modal-content {
  transform: scale(1);
}

/* 提现弹窗头部 */
.withdraw-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.withdraw-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.withdraw-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

/* 提现内容区域 */
.withdraw-content {
  flex: 1;
  overflow-y: auto;
  padding: 40rpx;
}

.withdraw-loading {
  text-align: center;
  padding: 60rpx 0;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 提现记录列表 */
.withdraw-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.withdraw-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 2rpx solid #e9ecef;
}

.withdraw-item-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.withdraw-amount {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.withdraw-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.withdraw-status.pending {
  background: none;
  color: #856404;
}

.withdraw-status.success {
  background: none;
  color: #155724;
}

.withdraw-status.failed {
  background: none;
  color: #721c24;
}

.withdraw-item-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.withdraw-time {
  font-size: 24rpx;
  color: #666;
}

.withdraw-id {
  font-size: 22rpx;
  color: #999;
}

.withdraw-trade {
  font-size: 22rpx;
  color: #999;
}

.withdraw-remark {
  font-size: 22rpx;
  color: #666;
  font-style: italic;
}

.withdraw-actions {
  display: flex;
  justify-content: flex-end;
}

.confirm-btn {
  background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 空状态 */
.withdraw-empty {
  text-align: center;
  padding: 80rpx 0;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 转账确认弹窗 */
.transfer-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.transfer-modal.show {
  opacity: 1;
  visibility: visible;
}

.transfer-modal-content {
  width: 600rpx;
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.transfer-modal.show .transfer-modal-content {
  transform: scale(1);
}

/* 转账弹窗头部 */
.transfer-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.transfer-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.transfer-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 转账信息 */
.transfer-info {
  text-align: center;
  margin-bottom: 50rpx;
}

.transfer-amount {
  font-size: 48rpx;
  font-weight: 600;
  color: #ff6b35;
  margin-bottom: 20rpx;
}

.transfer-message {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.transfer-tip {
  font-size: 24rpx;
  color: #999;
}

/* 转账操作按钮 */
.transfer-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.transfer-confirm-btn {
  background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.transfer-confirm-btn:disabled {
  background: #ccc;
  color: #999;
}

.transfer-cancel-btn {
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 16rpx;
  height: 80rpx;
  font-size: 30rpx;
}

.transfer-cancel-btn:disabled {
  background: #f0f0f0;
  color: #ccc;
}

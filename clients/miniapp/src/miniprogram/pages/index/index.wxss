/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 50%, #ff4757 100%);
}

.lottery-container {
  flex: 1;
  position: relative;
  overflow: hidden;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 环境设置浮动入口已移除（审核要求） */

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

/* 灯笼装饰 */
.lantern {
  position: absolute;
  width: 120rpx;
  height: 180rpx;
  background: linear-gradient(45deg, #ff6b35, #f7931e);
  border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
  border: 6rpx solid #d63031;
  box-shadow: inset 0 -20rpx 20rpx rgba(0,0,0,0.1);
}

.lantern::before {
  content: '';
  position: absolute;
  top: -15rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 30rpx;
  background: #2d3436;
  border-radius: 50%;
}

.lantern::after {
  content: '';
  position: absolute;
  bottom: -25rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 40rpx;
  background: #fdcb6e;
  border-radius: 50%;
  border: 2rpx solid #e17055;
}

.lantern-left {
  top: 50rpx;
  left: -40rpx;
  transform: rotate(-15deg);
  animation: swing-left 3s ease-in-out infinite;
}

.lantern-right {
  top: 100rpx;
  right: -40rpx;
  transform: rotate(15deg);
  animation: swing-right 3s ease-in-out infinite reverse;
}

@keyframes swing-left {
  0%, 100% { transform: rotate(-15deg); }
  50% { transform: rotate(-25deg); }
}

@keyframes swing-right {
  0%, 100% { transform: rotate(15deg); }
  50% { transform: rotate(25deg); }
}

/* 云朵装饰 */
.cloud {
  position: absolute;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50rpx;
  animation: float 4s ease-in-out infinite;
}

.cloud::before,
.cloud::after {
  content: '';
  position: absolute;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
}

.cloud-left {
  top: 20%;
  left: 5%;
  width: 80rpx;
  height: 40rpx;
}

.cloud-left::before {
  width: 60rpx;
  height: 60rpx;
  top: -30rpx;
  left: 10rpx;
}

.cloud-left::after {
  width: 40rpx;
  height: 40rpx;
  top: -20rpx;
  right: 10rpx;
}

.cloud-right {
  top: 30%;
  right: 8%;
  width: 100rpx;
  height: 50rpx;
  animation-delay: -2s;
}

.cloud-right::before {
  width: 70rpx;
  height: 70rpx;
  top: -35rpx;
  left: 15rpx;
}

.cloud-right::after {
  width: 50rpx;
  height: 50rpx;
  top: -25rpx;
  right: 15rpx;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

/* 山峰装饰 */
.mountain {
  position: absolute;
  bottom: 0;
  width: 0;
  height: 0;
  border-style: solid;
}

.mountain-left {
  left: 0;
  border-left: 150rpx solid transparent;
  border-right: 100rpx solid transparent;
  border-bottom: 200rpx solid rgba(255, 183, 77, 0.6);
}

.mountain-right {
  right: 0;
  border-left: 120rpx solid transparent;
  border-right: 180rpx solid transparent;
  border-bottom: 250rpx solid rgba(255, 183, 77, 0.4);
}

/* 主要内容卡片 */
.lottery-card {
  position: relative;
  z-index: 10;
  width: 600rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #e55039 100%);
  border-radius: 40rpx;
  padding: 60rpx 40rpx;
  margin: 100rpx 0 80rpx 0;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  text-align: center;
  border: 8rpx solid #fff;
  overflow: hidden;
}

.card-header .subtitle {
  display: block;
  color: #fdcb6e;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 20rpx;
  margin-bottom: 20rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.card-header .english-title {
  display: block;
  color: #fdcb6e;
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
  margin-bottom: 40rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.card-body .main-title {
  display: block;
  color: #fff;
  font-size: 96rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-shadow: 4rpx 4rpx 8rpx rgba(0, 0, 0, 0.5);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.card-body .description {
  display: block;
  color: #fff;
  font-size: 28rpx;
  line-height: 1.5;
  margin-bottom: 10rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 装饰元素 */
.decorative-elements {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.bird {
  position: absolute;
  width: 60rpx;
  height: 40rpx;
  background: #fff;
  clip-path: polygon(0% 50%, 25% 0%, 75% 0%, 100% 50%, 75% 100%, 25% 100%);
  animation: fly 3s ease-in-out infinite;
}

.bird-left {
  top: 20%;
  left: 10%;
  animation-delay: 0s;
}

.bird-right {
  top: 30%;
  right: 10%;
  animation-delay: -1.5s;
}

@keyframes fly {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  25% { transform: translateY(-10rpx) rotate(-5deg); }
  75% { transform: translateY(-5rpx) rotate(5deg); }
}

.firework {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background: #fdcb6e;
  border-radius: 50%;
  animation: sparkle 1.5s ease-in-out infinite;
}

.firework-1 {
  top: 15%;
  left: 20%;
}

.firework-2 {
  top: 25%;
  right: 25%;
  animation-delay: -0.8s;
}

@keyframes sparkle {
  0%, 100% { opacity: 0; transform: scale(0); }
  50% { opacity: 1; transform: scale(1); }
}

/* 抽奖按钮 */
.lottery-btn {
  position: relative;
  z-index: 10;
  width: 500rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #0984e3 0%, #74b9ff 50%, #2d3436 100%) !important;
  color: #fff !important;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 10rpx 30rpx rgba(9, 132, 227, 0.5);
  margin-bottom: 60rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: normal;
}

.lottery-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 5rpx 15rpx rgba(9, 132, 227, 0.3);
}

.lottery-btn::after {
  border: none;
}

/* 金额选择器样式 */
.amount-selector-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

.amount-selector {
  width: 100%;
  max-width: 680rpx;
  max-height: 80vh;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
  display: flex;
  flex-direction: column;
}

.selector-header {
  padding: 35rpx 30rpx 25rpx;
  text-align: center;
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  color: white;
  flex-shrink: 0;
}

.selector-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.selector-subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.scroll-tip {
  margin-top: 15rpx;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  display: inline-block;
}

.scroll-tip text {
  font-size: 20rpx;
  opacity: 0.8;
}

/* 金额选择器整体布局 */
.selector-content {
  display: flex;
  flex-direction: row;
  flex: 1;
  min-height: 0;
  overflow: hidden;
}

.amount-list {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  overflow-y: auto;
  border-right: 1rpx solid #f0f0f0;
  max-height: 350rpx;
  min-height: 0;
  height: calc(100% - 20rpx);
}

/* 添加滚动条样式 */
.amount-list::-webkit-scrollbar {
  width: 6rpx;
}

.amount-list::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 3rpx;
}

.amount-list::-webkit-scrollbar-thumb {
  background: #ccc;
  border-radius: 3rpx;
}

.amount-list::-webkit-scrollbar-thumb:hover {
  background: #999;
}

.amount-item {
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 20rpx !important;
  background: linear-gradient(135deg, #0984e3, #74b9ff) !important;
  color: white !important;
  border-radius: 12rpx !important;
  box-shadow: 0 3rpx 10rpx rgba(9, 132, 227, 0.3) !important;
  transition: all 0.3s ease !important;
  min-height: 80rpx !important;
  border: 2rpx solid transparent !important;
  margin: 0 !important;
  width: 100% !important;
  box-sizing: border-box !important;
}

.amount-item::after {
  border: none !important;
}

/* 为不同位置的金额添加不同颜色 */
.amount-item:nth-child(4n+1) {
  background: linear-gradient(135deg, #0984e3, #74b9ff) !important;
}

.amount-item:nth-child(4n+2) {
  background: linear-gradient(135deg, #00b894, #55efc4) !important;
}

.amount-item:nth-child(4n+3) {
  background: linear-gradient(135deg, #e17055, #fd79a8) !important;
}

.amount-item:nth-child(4n+4) {
  background: linear-gradient(135deg, #fdcb6e, #e84393) !important;
}

.amount-item.selected {

  transform: scale(1.05) !important;
  box-shadow: 0 5rpx 15rpx rgba(0, 184, 148, 0.4) !important;
}

.amount-item:active {
  transform: scale(0.95) !important;
}


/* 抽奖动画 */
.lottery-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.lottery-animation {
  display: flex;
  flex-direction: column;
  align-items: center;

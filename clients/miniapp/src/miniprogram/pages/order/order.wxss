/* 订单记录页面样式 */
page {
  background-color: #f7f7f7;
}

/* 全局文本选择控制 */
text {
  user-select: none;
}

.order-container {
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* =================== 登录状态样式 =================== */

/* 未登录状态 */
.login-required {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 70vh;
  padding: 60rpx 40rpx;
  text-align: center;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.8;
}

.login-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

.login-buttons {
  display: flex;
  flex-direction: column;
  width: 100%;
  max-width: 500rpx;
  gap: 24rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.login-btn.primary {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
  color: white;
  box-shadow: 0 8rpx 16rpx rgba(255, 107, 107, 0.3);
}

.login-btn.primary:active {
  background: linear-gradient(135deg, #ee5a52, #dc4c3f);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(255, 107, 107, 0.3);
}

.login-btn.secondary {
  background: white;
  color: #666;
  border: 2rpx solid #e1e1e1;
}

.login-btn.secondary:active {
  background: #f8f8f8;
  border-color: #ccc;
  transform: translateY(2rpx);
}

/* =================== 原有样式 =================== */

/* 筛选标签栏 */
.filter-tabs {
  display: flex;
  background: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  position: relative;
}

.filter-tab.active {
  color: #ff6b35;
}

.filter-tab.active::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #ff6b35;
  border-radius: 2rpx;
}

.tab-name {
  font-size: 32rpx;
  font-weight: 500;
}

.tab-count {
  font-size: 24rpx;
  color: #999999;
  margin-left: 8rpx;
}

/* 订单列表 */
.order-list {
  flex: 1;
  height: calc(100vh - 160rpx);
}

/* 订单列表项 */
.order-item {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-info {
  flex: 1;
}

.order-id {
  display: block;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999999;
}

.order-status {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 48rpx;
  padding: 10rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
  line-height: 1;
}

.status-paid {
  background: #e8f5e8;
  color: #4caf50;
}

.status-lottery {
  background: #e3f2fd;
  color: #2196f3;
}

.status-completed {
  background: #e8f5e8;
  color: #4caf50;
}

.status-refunded {
  background: #ffebee;
  color: #f44336;
}

.status-pending {
  background: #fff3e0;
  color: #ff9800;
}

/* 订单内容 */
.order-content {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-left {
  margin-right: 20rpx;
}

.lottery-icon {
  font-size: 48rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  border-radius: 16rpx;
}

.order-middle {
  flex: 1;
}

.product-name {
  display: block;
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.order-meta {
  margin-top: 8rpx;
}

.order-meta .meta-item {
  display: inline-block;
  font-size: 24rpx;
  color: #7a7a7a;
  margin-right: 16rpx;
}

.product-desc {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.prize-result {
  margin-top: 10rpx;
}

.result-text {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: 500;
}

.order-right {
  text-align: right;
}

.amount {
  font-size: 36rpx;
  color: #ff6b35;
  font-weight: 600;
}

/* 订单操作按钮 */
.order-actions {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

/* 已取消订单的按钮容器 - 右对齐布局 */
.cancelled-order-container {
  width: 100% !important;
  padding: 10rpx 0 !important;
  border-top: 1rpx solid #f0f0f0 !important;
  text-align: right !important;
}

/* 方法1: Flexbox右对齐 */
.cancelled-order-container {
  display: flex !important;
  justify-content: flex-end !important;
  align-items: center !important;
}

/* =================== 二维码弹窗样式 =================== */
.qr-modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.qr-modal-popup {
  width: 80vw;
  max-width: 640rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.2);
}

.qr-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.qr-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.qr-content {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.qr-image {
  width: 560rpx;
  height: 560rpx;
  background: #fafafa;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
}

.qr-loading, .qr-error {
  font-size: 28rpx;
  color: #666;
  padding: 40rpx 0;
}

.qr-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}

/* 方法2: 按钮右浮动 */
.cancelled-copy-btn {
  float: right !important;
  margin-left: auto !important;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  border: 1rpx solid;
}

.action-btn.primary {
  background: #ff6b35;
  border-color: #ff6b35;
  color: white;
}

.action-btn.secondary {
  background: white;
  border-color: #cccccc;
  color: #666666;
}

.action-btn.info {
  background: #2196f3;
  border-color: #2196f3;
  color: white;
}

.action-btn.tertiary {
  background: #f0f0f0;
  border-color: #d0d0d0;
  color: #888888;
  font-size: 24rpx;
}

/* 待支付状态的按钮组 */
.pending-actions {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  flex-wrap: nowrap;
  width: 100%;
  padding: 10rpx 0;
}

.pending-actions .action-btn {
  flex: 1;
  min-width: 0;
  max-width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  padding: 0 16rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 空状态 */
.empty-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  padding: 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.go-lottery-btn {
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 订单详情弹窗 */
.order-detail-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);

/* profile.wxss */
page {
  /* 确保页面从安全区域开始 */
  padding-top: env(safe-area-inset-top);
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.profile-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: calc(100vh - env(safe-area-inset-top));
}

.profile-form {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.label {
  width: 120rpx;
  font-size: 32rpx;
  color: #333;
}

.avatar-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  min-width: 120rpx;
  max-width: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  background: none;
  border: none;
  padding: 0;
  flex-shrink: 0;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.avatar-wrapper:active .avatar-overlay {
  opacity: 1;
}

.change-text {
  color: white;
  font-size: 24rpx;
}

.nickname-input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
}

.save-btn {
  width: 100%;
  height: 80rpx;
  background-color: #2196F3;
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Vue样式的背景模糊发光效果 - 对应 :before 伪元素 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.42"
                android:gradientRadius="80%"
                android:startColor="#FFFFEDB5"
                android:centerColor="#FFFF9A2B"
                android:endColor="#FFD83B00" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    
    <!-- Vue样式的box-shadow发光层 - 金黄色边框 -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#88FFDD55" />
            <corners android:radius="12dp" />
            <stroke
                android:width="4dp"
                android:color="#FFD700" />
        </shape>
    </item>
</layer-list>

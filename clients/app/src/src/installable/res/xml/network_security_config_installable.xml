<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 安装包（installable）变体：全局允许明文HTTP，仅用于开发联调 -->
    <base-config cleartextTrafficPermitted="true" />
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>